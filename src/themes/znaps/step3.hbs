{{#with cart}}

<h2 class="text-center">Prüfen und Bestellen</h2>

<div class="col-md-12 cart-box">
    <h3>AGB und Widerrufsbelehrung</h3>

    <div class="checkbox col-md-12">
        <label>
            <input type="checkbox" data-minicart-role="persist" name="agb" id="agb" value="checked" {{#if (getPersistValue 'agb')}}checked="checked"{{/if}}> Ich akzeptiere die <a href="/agb" target="_blank">allgemeinen Geschäftsbedingungen</a> und die
            Bestimmungen zum <a href="/datenschutzerklaerung" target="_blank">Datenschutz</a>. Die Informationen zum <a href="/agb" target="_blank">Widerrufsrecht</a>
            wurden mir zur Verfügung gestellt.
        </label>
    </div>
</div>


<div class="col-md-6 col-sm-6 col-xs-12 cart-box">
    <h3>Rechnungsadresse</h3>

    <p>
        {{getFormValue "billing:firma"}}<br/>
        {{getFormValue "billing:anrede"}} {{getFormValue "billing:vorname"}} {{getFormValue "billing:nachname"}}<br/>
        {{getFormValue "billing:strasse"}} <br/>
        {{getFormValue "billing:plz"}} {{getFormValue "billing:ort"}}<br/>
        {{getFormValue "billing:land"}}
    </p>
</div>
