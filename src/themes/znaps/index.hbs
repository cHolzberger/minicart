<form method="post" class="{{cart.form_css_class}}" action="{{cart.config.action}}" target="{{cart.config.target}}">
    <button type="button" data-minicart-role="minicart-closer">&times;</button>

    <section class="content content-cart">

        {{> ./head.hbs}}
        {{> ./step1.hbs}}
        {{> ./step2.hbs}}
        {{> ./step3.hbs}}
    </section>
    {{#with cart}}
        <input type="hidden" name="cmd" value="_cart"/>
        <input type="hidden" name="upload" value="1"/>
        {{#each settings}}
            <input type="hidden" name="{{@key}}" value="{{.}}"/>
        {{/each}}

    {{/with}}
</form>

