{{#with cart}}


        <h2 class="text-center">Warenkorb</h2>

        <div class="col-md-12 alert alert-info text-center" role="alert">
            <b>Bitte beachten Sie</b><br/>
            Die Vorbestellung unserer Produkte erfolgt in handelsüblichen Mengen.<br/>
            Die maximale Menge eines Artikels pro Kunde beträgt 5 Stück.
        </div>


        <div class="row">

            <div class="col-md-6 col-xs-12 col-sm-6 cart-box">
                <h3>Zahlungsart</h3>

                <div class="radio">
                    <label>
                        <input type="radio" name="Zahlungsart" id="Zahlungsart" value="Zahlungsart" checked>
                        <b>PayPal</b><br/>
                        Sicher, einfach und schnell. Inklusive Käuferschutz.
                    </label>
                </div>
            </div>

            <div class="col-md-6 col-xs-12 col-sm-6 cart-box">
                <h3>Versandart</h3>

                <div class="radio">
                    <label>
                        <input type="radio" name="Versandart" id="Versandart" value="Versandart" checked>
                        <b>DHL</b><br/>
                        Versicherter Versand.
                    </label>
                    </label>
                </div>
            </div>

            <div class="col-md-12 cart-box">

                <h3>Warenkorb bearbeiten</h3>

                <table class="table table-striped table-hover table-responsive cart-table">
                    <thead>
                    <tr>
                        <th class="cart-th-article">Artikel</th>
                        <th class="cart-th-quantity">Anzahl</th>
                        <th class="cart-th-unitprice">Stückpreis</th>
                        <th class="cart-th-sum">Summe</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each items}}
                        <tr data-minicart-role="minicart-item">
                            <td class="cart-td-article ">
                                <a data-minicart-role="minicart-name" href="{{get "href"}}">{{get "item_name"}}</a>
                            </td>
                            <td class="cart-td-quantity minicart-details-quantity">
                                <button type="button" class="btn btn-default btn-cart-delete pull-right"
                                        data-minicart-idx="{{@index}}" data-minicart-role="minicart-remove">X
                                </button>

                                <input disabled class="form-control input-sm pull-right" data-minicart-role="minicart-quantity" data-minicart-idx="{{@index}}"
                                       name="quantity_{{addOne @index}}" type="text"
                                       pattern="[0-9]*" value="{{get "quantity"}}" autocomplete="off"/>
                            </td>
                            <td class="cart-td-unitprice">
                                <span data-minicart-role="minicart-price-single">{{amount @root/priceFormat}}</span>
                            </td>
                            <td class="cart-td-sum"><span data-minicart-role="minicart-price">{{total @root/priceFormat}}</span>*
                                <input type="hidden" name="item_name_{{addOne @index}}" value="{{get "item_name"}}"/>
                                <input type="hidden" name="amount_{{addOne @index}}" value="{{get 'amount' }}"/>
                                <input type="hidden" name="shipping_{{addOne @index}}" value="{{get "shipping"}}"/>
                                <input type="hidden" name="shipping2_{{addOne @index}}" value="{{get "shipping2"}}"/>
                            </td>
                        </tr>
                    {{/each}}

                    </tbody>
                    <tfoot class="minicart-footer">
                    <tr>
                        <td></td>
                        <td></td>
                        <td>Warenwert:</td>
                        <td>
                            {{#if @root/hasItems}}
                                <span data-minicart-role="minicart-subtotal">
                                    {{subtotal @root/priceFormat}}
                                </span>
                            {{/if}}
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td></td>
                        <td>zzgl. Versandkosten:</td>
                        <td><span data-minicart-role="minicart-shipping-global">
                            {{shipping_global @root/priceFormat}}
                            </span>*</td>
                    </tr>
                    <tr>
                        <td></td>
                        <td></td>
                        <td class="font-bold">Gesamtpreis:</td>
                        <td class="font-bold"><span data-minicart-role="minicart-price">{{total @root/totalFormat}}</span>*</td>
                    </tr>
                    <tr>
                        <td></td>
                        <td></td>
                        <td>inkl. {{@root/config.tax}}% MwSt.:</td>
                        <td>{{tax @root/priceFormat}}*</td>
                    </tr>
                    </tfoot>
                </table>

            </div>

        </div>

        <button type="button" class="btn btn-default pull-left col-md-5 col-sm-5 hidden-xs">weiter einkaufen</button>
        <button type="button" class="btn btn-success pull-right col-md-5 col-sm-5 col-xs-12"  data-minicart-role="change-state" data-minicart-target-state="step2">Schritt 2: Ihre Adresse</button>
{{/with}}
