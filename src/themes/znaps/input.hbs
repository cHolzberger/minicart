<div class="form-group col-md-{{#if size}}{{size}}{{else}}6{{/if}}">
    <label for="{{name}}">{{label}}{{#if required}}*{{/if}}</label>
    <input type="text" class="form-control" id="{{name}}" name="{{name}}" placeholder="{{label}}" {{#if required}}required="required"{{/if}} data-minicart-role="persist" value="{{getPersistValue name}}">
</div>
